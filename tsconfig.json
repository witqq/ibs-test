{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist/client",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015.collection",
      "es2015.promise"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "client/**/*",
    "share/**/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "ts-compile",
    "server/**/*"
  ]
}
